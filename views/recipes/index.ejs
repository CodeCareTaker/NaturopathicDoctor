<% include ../partials/header %>

<div id="siteBody">
    <div class="mainSection">
        <img class="topImage" src="/images/fruitsmoothie.png"/>
            <p><strong>Recipes</strong></p>
            <br />
            <% if (currentUser && currentUser.isAdmin == true) { %>
                    <p>
                        <a href="/recipes/new" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span> Add New Recipe</a>
                    </p>
            <% } %>
            <br />
            <% recipes.forEach(function(recipe){ %>
                <h3><strong><%=recipe.name%></strong></h3>
                <br />
                <p>Ingredients:</p>
                <br />
                <p><%= recipe.ingredients %></p>
                 <br />
                 <p>Instructions:</p>
                <br />
                <p><%= recipe.instructions %></p>
                 <br />
                <% if (currentUser && currentUser.isAdmin == true) { %>
                        <p>
                            <a href="/recipes/<%= recipe._id %>" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modify</a>
                        </p>
                <% } %>
            <% }) %>
            <br>
            <br>
            <br>
    </div>
</div>

<% include ../partials/footer %>