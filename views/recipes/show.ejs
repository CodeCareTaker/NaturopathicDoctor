<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;" class="newText">Edit <%= recipe.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe[name]" value="<%= recipe.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe[ingredients]" value="<%= recipe.ingredients %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe[instructions]" value="<%= recipe.instructions %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/recipes" class="newText">Go Back</a>
            <form id="delete-form" action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">Delete</button>
            </form>
            
        </div>
    </div>
</div>
<% include ../partials/footer %>