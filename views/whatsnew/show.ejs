<% include ../partials/formHeader %>

<div class="container">
    <div class="row">
        <h1 class="newText">Edit <%= newsItem.title %></h1>
        <div class="formContainer">
            <form action="/whatsnew/<%= newsItem._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <p class="newText">Title: </p><input class="form-control" type="text" name="newsItem[title]" value="<%= newsItem.title %>">
                </div>
                <div class="form-group">
                    <p class="newText">Story: </p><textarea class="form-control" rows="4" cols="50" name="newsItem[content]"><%= newsItem.content %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <div>
                <a href="/whatsnew" class="btn btn-xs btn-default">Go Back</a>
                <form class="text-right delete-news-form" action="/whatsnew/<%= newsItem._id %>?_method=DELETE" method="POST">
                    <input type="submit" class="btn btn-xs btn-danger" value="Remove">
                </form>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>