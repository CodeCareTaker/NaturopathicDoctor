<% include ../partials/header %>

<div class="mainSection">
    <p><strong>What's New</strong><br />
        <br />
        News & Announcements will be posted here.  Please check back from time to time!
        <br />
        <% if (currentUser && currentUser.isAdmin == true) { %>
            <a href="/whatsnew/new" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Add News Item</a>
        <% } %>
        <br />
        <% news.forEach(function(newsItem){ %>
        <strong><%= newsItem.created.toDateString() %></strong> - <strong><%=newsItem.title%></strong>
        <br />
        <p><%= newsItem.content %></p>
            <% if (currentUser && currentUser.isAdmin == true) { %>
                    <p>
                        <a href="/whatsnew/<%= newsItem._id %>" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Modify</a>
                    </p>
            <% } %>
        <% }) %>
        <br />
        <br />
    </p>
</div>

<% include ../partials/footer %>