<% include ../partials/formHeader %>

<div class="container">
    <div class="row">
        <h1 class="newText">Post a News Item</h1>
        <div class="formContainer">
            <form action="/whatsnew" method="POST">
                <div class="form-group">
                    <p class="newText">Title: </p><input class="form-control" type="text" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <p class="newText">Content: </p><input class="form-control" type="text" name="content" placeholder="Type News Here">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/whatsnew" class="btn btn-xs btn-default">Go Back</a>
        </div>
    </div>
</div>

